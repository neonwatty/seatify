# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service role key (for webhooks and admin operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App URL (for OAuth redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Microsoft Clarity (optional - for heatmaps)
NEXT_PUBLIC_CLARITY_PROJECT_ID=your-clarity-project-id

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRO_MONTHLY_PRICE_ID=price_...
STRIPE_PRO_YEARLY_PRICE_ID=price_...
STRIPE_TEAM_MONTHLY_PRICE_ID=price_...
STRIPE_TEAM_YEARLY_PRICE_ID=price_...

# Public Stripe Price IDs (for client-side checkout)
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PRICE_ID=price_...
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PRICE_ID=price_...
NEXT_PUBLIC_STRIPE_TEAM_MONTHLY_PRICE_ID=price_...
NEXT_PUBLIC_STRIPE_TEAM_YEARLY_PRICE_ID=price_...

# Resend Email Configuration (for RSVP invitations)
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_WEBHOOK_SECRET=whsec_...

# Cron Job Authentication (for automated reminders)
CRON_SECRET=your-random-secret-string

# Access Gate (optional - restrict app access to specific emails during development)
# When set, only these emails can access the app. Others see "Coming Soon" page.
# Format: comma-separated emails
# ALLOWED_TESTERS=user1@example.com,user2@example.com
